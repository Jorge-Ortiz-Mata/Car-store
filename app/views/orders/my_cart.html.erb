<h1>My cart.</h1> <br>

<% if !@orders.blank? %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Vehicle</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.user.profile.first_name %> <%= order.user.profile.last_name %></td>
        <td><%= order.vehicle.title %></td>
        <td><%= order.vehicle.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>
  You don't have any products in your cart. <br>
  Add produts to your car in order to see more options.
</p>
<% end %>