<%= search_form_for @q do |f| %>

    <%= f.label 'By title: ' %>
    <%= f.search_field :title_cont %>

    <%= f.label 'By Company: ' %>
    <%= f.search_field :company_cont %>

    <%= f.label 'By User: ' %>
    <%= f.search_field :user_id_eq %>

    <%= f.label 'By Price: ' %>
    <%= f.search_field :price_gteq %> - <%= f.search_field :price_lteq %>

    <%= f.label 'By Seller: ' %>
    <%= f.search_field :user_email_cont %>

    <%= f.label 'By Category: ' %>
    <%= f.select :categories_name_cont, Category.all.map { |category| category.name } %>
        
    <%= f.submit %>
<% end %>