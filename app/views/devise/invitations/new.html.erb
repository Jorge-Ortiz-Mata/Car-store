<%= render 'shared/header' %>
<%= render 'shared/notice' if notice %>
<%= render 'shared/alert' if alert %> <br>

<section class="invitable_section">
    <h2>
      <%= t "devise.invitations.new.header" %>
    </h2> <br>
    <div>
        <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <% resource.class.invite_key_fields.each do |field| -%>
            <div class="field">
                <%= f.label field, class:"invitable_label" %>
                <%= f.text_field field, class:"invitable_input" %>
            </div>
            <% end -%>

            <div>
                <%= f.submit t("devise.invitations.new.submit_button"), class:"send_invitation_button" %>
            </div>
        <% end %>
    </div>
</section>
