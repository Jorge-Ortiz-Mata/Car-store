<%= render 'shared/header' %>
<%= render 'shared/notice' if notice %>
<%= render 'shared/alert' if alert %>

<section class="sign_in_page">

    <h2>
        Sign in
    </h2>

    <div class="form_sign_up">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
            <%= f.label :email, class:"form_label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field_form" %>
            </div> <br>

            <div class="field">
            <%= f.label :password, class:"form_label" %>
            <%= f.password_field :password, autocomplete: "current-password", class:"field_form" %>
            </div> <br>

            <% if devise_mapping.rememberable? %>
                <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
            <% end %> <br>

            <div class="actions">
            <%= f.submit "Log in", class:"submit_sign_in" %>
            </div>
        <% end %>
    </div>

    <div>
        <%= render "devise/shared/links" %>
    </div>

</section>

<%= javascript_pack_tag 'fixed_sec_menu' %>
