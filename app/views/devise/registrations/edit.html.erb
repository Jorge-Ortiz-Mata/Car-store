<%= render 'shared/header' %>
<%= render 'shared/notice' if notice %>
<%= render 'shared/alert' if alert %>

<section class="sign_up_page">

    <h2>Account settings.</h2>

    <div class="form_sign_in">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
                <%= f.label :email, class:"form_label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field_form" %>
            </div> <br>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div> <br>
            <% end %>

            <div class="field">
                <%= f.label :password, class:"form_label" %> <i>(leave blank if you don't want to change it)</i>
                <%= f.password_field :password, autocomplete: "new-password", class:"field_form" %>
                <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
            </div> <br>

            <div class="field">
                <%= f.label :password_confirmation, class:"form_label" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"field_form" %>
            </div> <br>

            <div class="field">
                <%= f.label :current_password, class:"form_label" %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class:"field_form" %>
            </div> <br>

            <div class="actions">
                <%= f.submit "Update" %>
            </div> <br>
        <% end %>
    </div>

    <div>
        <h3>Cancel my account</h3> <br>

        <div>
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"cancel_account_button" %>
        </div>

        <div>
            <%= link_to "Back", :back, class:"go_back_button" %>
        </div>
    </div>

</section>