<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.email %>
</p>

<%= link_to 'Edit', post_post_wizard_index_path(@post) if @post.user == current_user %> <br>
<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } if @post.user == current_user %>
