<h2>
    Post Info.
</h2>

<p>
    <strong>Title:</strong> <br>
    <%= @post.title %>
</p>

<p>
    <strong>Description:</strong> <br>
    <%= @post.body %>
</p>

<br>

<%= form_with model: @post, url: post_post_wizard_path, method: :put do |form| %>
    <div>
        <%= form.label :body %>
        <%= form.rich_text_area :body %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>

<%= link_to 'Back', previous_wizard_path %> <br>
<%= link_to 'Finish', next_wizard_path %>